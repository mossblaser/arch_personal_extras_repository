license=('GPL2')

depends=('inkscape' 'python-aiohttp>=3.0.0' 'python-beautifulsoup4>=4.0.0' 'python>=3.12.0' 'python<3.13.0')

commit=04b52f7d86b2231efd3ea1918d4a80f2aad87473

